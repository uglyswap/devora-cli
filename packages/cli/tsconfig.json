{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@devora/core": ["../core/index.ts"],
      "@google/gemini-cli-core": ["../core/index.ts"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }]
}